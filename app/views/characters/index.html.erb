<% if user_signed_in? %>
  <p>You are signed in as <%= current_user.email %> | <%= link_to "Sign Out", destroy_user_session_path, method: :delete %></p>
  <h1>These Are Your Characters</h1>
  <% @characters.each do |character| %>
    <h4><%= link_to character.name, character_path(character) %>...............................<%= link_to "Remove Character", character_path(character), method: :delete %></h4>
  <% end %>
  <%= link_to "New Character", new_character_path %>
<% else %>
  <p>You need to <%= link_to "sign in", new_user_session_path %> or <%= link_to "sign up", new_user_registration_path %>.</p>
  <% unless @users.blank? %>
    <h3>Available Users:</h3>
    <ul>
      <% @users.each do |user| %>
        <li><%= link_to user.email, new_user_session_path(email: user.email) %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
